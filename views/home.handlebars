{{#each posts as |post|}}
<a class="btn m-3 postBox d-flex flex-row justify-content-between align-items-center rounded shadow" href="/post/{{post.id}}">
    <h1 class="text-light p-2 mx-3 btn" href="/posts/#id">{{post.title}}</h1>
    <p class="text-light p-2 my-0 mx-3">{{#if user.name}}{{user.name}}{{else}}Anonymous{{/if}}</p>
</a>
{{/each}}