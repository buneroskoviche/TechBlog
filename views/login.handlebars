<div class="container d-flex flex-row justify-content-around">
                
        <form class="signUp p-3 rounded shadow text-light" style="background-color: darkslategray;">
            <h3>Sign Up</h3>
            <div class="form-group mb-2">
                <label for="inputUsername">User name</label>
                <input class="form-control" id="inputUsername" placeholder="Enter Username">
              </div>
            <div class="form-group mb-2">
              <label for="InputEmail">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group mb-2">
              <label for="InputPassword">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn text-light" style="background-color: cadetblue;">Submit</button>
        </form>

        <form class="logIn p-3 rounded shadow text-light" style="background-color: darkslategray; height: fit-content;">
            <h3>Log in</h3>
            <div class="form-group mb-2">
              <label for="InputEmail">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group mb-2">
              <label for="InputPassword">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn text-light" style="background-color: cadetblue;">Submit</button>
        </form>
    </div>
    
</div>